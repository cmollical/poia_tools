.streamlined-workflow {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 20px;
}

.workflow-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  padding: 30px;
  max-width: 700px;
  width: 100%;
  margin: 0 auto;
}

.workflow-card h2 {
  text-align: center;
  margin-bottom: 30px;
  color: #2c3e50;
  font-size: 24px;
  font-weight: 600;
}

.workflow-card h3 {
  margin-bottom: 15px;
  color: #34495e;
  font-size: 18px;
  font-weight: 500;
}

/* Project Selection Styles */
.project-selection {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-bottom: 30px;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.input-group label {
  font-weight: 500;
  color: #2c3e50;
  font-size: 16px;
}

/* Content Preview Styles */
.content-preview {
  margin-bottom: 30px;
}

.preview-box {
  background: #f8f9fa;
  border: 1px solid #e9ecef;
  border-radius: 8px;
  padding: 20px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 14px;
  line-height: 1.6;
  color: #495057;
  white-space: pre-line;
  max-height: 200px;
  overflow-y: auto;
}

/* Integration Selection Styles */
.integration-selection {
  margin-bottom: 30px;
}

.integration-options {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.integration-option {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 15px;
  border: 2px solid #e9ecef;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 16px;
  font-weight: 500;
}

.integration-option:hover {
  border-color: #007bff;
  background-color: #f8f9ff;
}

.integration-option input[type="radio"] {
  margin: 0;
  transform: scale(1.2);
}

.integration-option input[type="radio"]:checked + .integration-option {
  border-color: #007bff;
  background-color: #e7f1ff;
}

/* Resource Selection Styles */
.resource-selection {
  margin-bottom: 25px;
  padding: 20px;
  border: 1px solid #e9ecef;
  border-radius: 8px;
  background: #fafbfc;
}

.selection-row {
  display: flex;
  gap: 12px;
  align-items: center;
}

.new-resource-form {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

/* Form Element Styles */
.form-select,
.form-input,
.form-textarea {
  flex: 1;
  padding: 12px 16px;
  border: 1px solid #ced4da;
  border-radius: 6px;
  font-size: 14px;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-select:focus,
.form-input:focus,
.form-textarea:focus {
  outline: none;
  border-color: #007bff;
  box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

.form-textarea {
  min-height: 80px;
  resize: vertical;
}

/* Button Styles */
.workflow-actions {
  display: flex;
  justify-content: space-between;
  gap: 15px;
  margin-top: 30px;
}

.btn-primary,
.btn-secondary,
.btn-execute,
.btn-new,
.btn-cancel {
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.btn-primary {
  background-color: #007bff;
  color: white;
}

.btn-primary:hover:not(:disabled) {
  background-color: #0056b3;
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3);
}

.btn-secondary {
  background-color: #6c757d;
  color: white;
}

.btn-secondary:hover {
  background-color: #545b62;
  transform: translateY(-1px);
}

.btn-execute {
  background: linear-gradient(135deg, #28a745, #20c997);
  color: white;
  font-size: 16px;
  padding: 15px 30px;
  font-weight: 600;
}

.btn-execute:hover:not(:disabled) {
  background: linear-gradient(135deg, #218838, #1ba085);
  transform: translateY(-2px);
  box-shadow: 0 6px 12px rgba(40, 167, 69, 0.4);
}

.btn-new {
  background-color: #17a2b8;
  color: white;
  padding: 8px 16px;
  font-size: 12px;
  white-space: nowrap;
}

.btn-new:hover {
  background-color: #138496;
}

.btn-cancel {
  background-color: #dc3545;
  color: white;
  font-size: 12px;
  padding: 8px 16px;
}

.btn-cancel:hover {
  background-color: #c82333;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  margin-top: 15px;
}

/* Disabled Button States */
button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none !important;
}

button:disabled:hover {
  transform: none !important;
  box-shadow: none !important;
}

/* Error Message Styles */
.error-message {
  background-color: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
  border-radius: 6px;
  padding: 12px 16px;
  margin: 15px 0;
  font-size: 14px;
}

/* Loading States */
.loading-spinner {
  display: inline-block;
  width: 16px;
  height: 16px;
  border: 2px solid #f3f3f3;
  border-top: 2px solid #007bff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Responsive Design */
@media (max-width: 768px) {
  .streamlined-workflow {
    padding: 15px;
  }
  
  .workflow-card {
    padding: 20px;
  }
  
  .workflow-actions {
    flex-direction: column;
  }
  
  .selection-row {
    flex-direction: column;
    gap: 10px;
  }
  
  .btn-new {
    align-self: flex-start;
  }
  
  .integration-options {
    gap: 8px;
  }
  
  .integration-option {
    padding: 12px;
    font-size: 14px;
  }
}
